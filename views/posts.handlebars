
<h1 class="text-3xl py-40">Recent Blog Posts</h1>
{{#each posts}}    
<article class="border" id="dynamicPosts">
    {{#if url}}
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src="{{url}}" alt="Post Image"/>
    {{/if}}
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{title}}</h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{content}}</p>
    <span class="text-2xl">by {{user.username}}</span>
    </div>


</article>
{{/each}}
<script src="js/blog.js"></script>