<h1 class="text-3xl py-40">Post a comment</h1>
  
<article class="border" id="dynamicPosts">
  <button type="button" id="deleteBtn" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800">Delete post</button>
    <button type="button" id="updateBtn" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Update post</button>
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src="{{post.url}}" alt="Post Image"/>
  
    <div class="flex flex-col justify-between p-4 leading-normal">
        <input value="{{post.title}}" type="text" class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"></input>
        <input value="{{post.content}}" type="text" class="mb-3 font-normal text-gray-700 dark:text-gray-400"></input>
    <span class="text-2xl"> by {{post.user.username}}</span>
    </div>
{{!-- //post.comment, each loop, for each one make a comment box --}}
{{#each post.comments}}
<p>{{this.date}}{{this.content}}<span> By {{this.user.username}}</span></p>
{{/each}}
</article>
<form id="commentForm" class="border p-4">
    <label for="comment">Comment:</label>
    <textarea id="comment" name="comment" rows="4" cols="50"></textarea>
    <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Post comment</button></form>
    <input type="hidden" id="postId" value="{{post.id}}">
<script src="/js/individual.js"></script>

