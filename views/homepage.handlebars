    
 {{!-- <h1 class="text-3xl py-40">The Code and Canvas Blog</h1> --}}
<div class="bg-white py-24 sm:py-32"></div>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto lg:mx-0 flex flex-col items-center">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">From the blog</h1>
      <p class="mt-2 text-lg leading-8 text-gray-600 max-w-2xl">Created with developers in mind, this is a space to write about technical concepts and view existing posts abut recent advancements or new technologies.</p>
    </div>
    <div class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      {{#each posts}}  
      <article class="flex max-w-xl flex-col items-center justify-between">
        <div class="flex gap-x-4 text-xs">
          <time class="text-gray-500">{{format_date date}}</time>
        </div>
        <div class="group flex flex-col items-center">
          <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" src="{{url}}" alt="Post Image"/>
          <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600">
            <a href="/post/{{id}}">
              <span class="inset-0"></span>
              {{title}}
            </a>
          </h3>
          <p class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">{{content}}</p>
        </div>
        <div class="relative mt-8 flex items-center gap-x-4">
          
          <div class="text-sm leading-6">
            <p class="font-semibold text-gray-900">
              
                <span class="absolute inset-0"></span> by 
                {{user.username}}
              
            </p>
            
          </div>
        </div>
      </article>
{{/each}}
      
    </div>
  </div>
</div>




<script src="js/blog.js"></script>